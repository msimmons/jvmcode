{
  "name": "jvmcode",
  "displayName": "JVMCode",
  "description": "Event Bus Bridge to JVM Extensions",
  "version": "1.0.2",
  "publisher": "contrapt",
  "engines": {
    "vscode": "^1.29.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/msimmons/jvmcode"
  },
  "author": {
    "name": "Mark Simmons",
    "email": "mark@contrapt.net"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "jvmcode.start",
        "title": "JVM: Start Server"
      },
      {
        "command": "jvmcode.echo",
        "title": "JVM: Echo Message"
      },
      {
        "command": "jvmcode.log-level",
        "title": "JVM: Set Log Level"
      },
      {
        "command": "jvmcode.stop",
        "title": "JVM: Stop Server"
      },
      {
        "command": "jvmcode.add-dependency",
        "title": "JVM: Add Dependency"
      },
      {
        "command": "jvmcode.add-classdir",
        "title": "JVM: Add Class Directory"
      },
      {
        "command": "jvmcode.find-class",
        "title": "JVM: Find Class"
      },
      {
        "command": "jvmcode.exec-class",
        "title": "JVM: Execute Class"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "jvmcode.dependency-tree",
          "name": "JVM Dependencies",
          "when": "jvmcode.context.isJvmProject"
        }
      ]
    },
    "configuration": {
      "title": "JVMCode Server Configuration",
      "properties": {
        "jvmcode.javaCommand": {
          "type": "string",
          "default": "/usr/bin/java",
          "description": "Path to java command to execute to start the server"
        },
        "jvmcode.srcLocation": {
          "type": "string",
          "description": "The location of the JDK source code; defaults to either java_home/src.zip or java_home/lib/src.zip"
        },
        "jvmcode.logLevel": {
          "type": "string",
          "enum": [
            "DEBUG",
            "INFO"
          ],
          "default": "INFO",
          "description": "The server's default log level"
        },
        "jvmcode.javaOptions": {
          "type": "array",
          "default": [
            "-Xms50m",
            "-Xmx1g",
            "-Xss256k",
            "-XX:MaxMetaspaceSize=512m",
            "-server"
          ],
          "description": "The JVM options used to start the server"
        },
        "jvmcode.excludes": {
          "type": "array",
          "default": [
            "com.sun",
            "com.oracle",
            "jdk",
            "sun",
            "java.awt",
            "java.rmi"
          ],
          "description": "A list of packages to exclude from dependency list.  Matches all packages with the given prefix"
        },
        "jvmcode.jmodIncludes": {
          "type": "array",
          "default": [
            "java.base",
            "java.compiler",
            "java.sql",
            "java.sql.rowset"
          ],
          "description": "A list of modules (jdk >= 9) to include from java_home/jmods"
        },
        "jvmcode.sourceExtensions": {
          "type": "array",
          "default": [
            "java",
            "kt",
            "kts",
            "groovy",
            "scala"
          ],
          "description": "A list of extensions used to look for source files in dependency source jars"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile; ./gradlew build deploy",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.10.58",
    "mocha": "^3.5.0",
    "typescript": "^2.9.2",
    "vscode": "^1.1.36"
  },
  "dependencies": {
    "node-uuid": "^1.4.8",
    "vertx3-eventbus-client": "^3.8.3"
  }
}
