{
    "name": "My test java",
    "scopeName": "source.java",
    "fileTypes": [".java"],
    "uuid": "",
    "patterns": [{ "include": "#source" }],
    "repository": {
      "source": {
        "patterns": [{"include": "#comment"}, { "include": "#package" }, { "include": "#import" }]
      },
      "comment": {
        "patterns": [
            {
                "name": "comment.block.documentation.java",
                "begin": "/\\*\\*(?!/)",
                "beginCaptures": {
                    "0": {"name": "punctuation.definition.comment.java"}
                },
                "end": "\\*/",
                "endCaptures": {
                    "0": {"name": "punctuation.definition.comment.java"}
                }
            },
            {
                "name": "comment.block.java",
                "begin": "/\\*",
                "beginCaptures": {
                    "0": {"name": "punctuation.definition.comment.java"}
                },
                "end": "\\*/",
                "endCaptures": {
                    "0": {"name": "punctuation.definition.comment.java"}
                }
            },
            {
                "begin": "//",
                "beginCaptures": {
                    "0": {"name": "punctuation.definition.comment.java"}
                },
                "end": "(?=$)"
            }
        ]
      },
      "package": {
        "match": "(package)\\s+([.\\w]+)",
        "captures": {
            "1": { "name" : "keyword.control.package.java" },
            "2": { "name" : "entity.name.package.java" }
        },
        "name": "meta.package.java"
      },
      "import": {
          "match": "(import)\\s+([.\\w]+)[\\*]?",
          "captures": {
            "1": { "name" : "keyword.control.import.java" },
            "2": { "name" : "entity.name.import.java" }
        },
        "name": "meta.import.java"
      }
    }
  }